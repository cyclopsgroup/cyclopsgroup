    <table name="c_hf_dietrecord" javaName="DietRecord" description="Diet Record">
    	<column name="record_id" required="true" primaryKey="true" type="INTEGER" description="Primary Key"/>
    	<column name="year" required="true" type="INTEGER" description="year"/>
    </table>
    -->
</database>
