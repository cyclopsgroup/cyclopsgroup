<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">
    <listener>
        <display-name>Log4jConfigListener</display-name>
        <listener-class>
            org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
    <listener>
        <display-name>SpringContextListener</display-name>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>waterview</servlet-name>
        <servlet-class>
            org.cyclopsgroup.waterview.impl.servlet.SpringWaterviewServlet</servlet-class>
        <init-param>
            <param-name>contextProcessorBean</param-name>
            <param-value>gallerian.ContextProcessor</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>waterview</servlet-name>
        <url-pattern>*.vm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>waterview</servlet-name>
        <url-pattern>/c/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.vm</welcome-file>
    </welcome-file-list>
</web-app>