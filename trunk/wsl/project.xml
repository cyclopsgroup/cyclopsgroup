<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://maven.apache.org/xsd/maven-project-3.0.0.xsd">
    <extend>${maven.repo.local}/com.cyclopsgroup/poms/cyclopsgroup-1.0.pom</extend>
    <pomVersion>3</pomVersion>
    <id>wsl</id>
    <name>waterview stylesheet library</name>
    <currentVersion>SNAPSHOT</currentVersion>
    <organization>
        <name>Cyclops Group</name>
        <url>http://www.cyclopsgroup.com</url>
        <logo>/images/cyclopsgroup_logo.png</logo>
    </organization>
    <inceptionYear>2005</inceptionYear>
    <shortDescription>Stylesheets for waterview</shortDescription>
    <developers>
        <developer>
            <name>Jiaqi Guo</name>
            <id>jiaqi</id>
            <email>jiaqi.guo@gmail.com</email>
            <organization>Cyclops Group</organization>
            <url>http://www.cyclopsgroup.com</url>
            <timezone>-6</timezone>
        </developer>
    </developers>
    <build>
        <nagEmailAddress>cyclops-group-develop@lists.sourceforge.net</nagEmailAddress>
        <sourceDirectory>src/main/java</sourceDirectory>
        <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>${pom.build.unitTestSourceDirectory}</directory>
                    <filtering>false</filtering>
                </resource>
                <resource>
                    <directory>src/test/resources</directory>
                    <filtering>false</filtering>
                </resource>
                <resource>
                    <directory>src/webapp/WEB-INF/classes</directory>
                    <filtering>false</filtering>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>${pom.build.sourceDirectory}</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
                <filtering>false</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
</project>