<?xml version="1.0" encoding="UTF-8"?>
<plexus>
    <logging>
        <implementation>org.codehaus.plexus.logging.ConsoleLoggerManager</implementation>
        <logger>
            <threshold>DEBUG</threshold>
        </logger>
    </logging>
    <components>
        <component>
            <role>plexaros.engine</role>
            <implementation>com.cyclops.plexaros.impl.DefaultEngine</implementation>
            <configuration>
                <pluginfinders>
                    <pluginfinder>plexaros.pluginfinder.filesystem</pluginfinder>
                    <pluginfinder>plexaros.pluginfinder.classpath</pluginfinder>
                </pluginfinders>
            </configuration>
        </component>
        <component>
            <role>plexaros.pluginfinder.filesystem</role>
            <implementation>com.cyclops.plexaros.impl.FileSystemPluginFinder</implementation>
            <configuration>
                <folder>${plexus.home}/plugins</folder>
            </configuration>
        </component>
        <component>
            <role>plexaros.pluginfinder.classpath</role>
            <implementation>com.cyclops.plexaros.impl.ClasspathPluginFinder</implementation>
            <configuration>
                <root>plexaros/plugins</root>
                <plugins>
                    <plugin>p1</plugin>
                    <plugin>p2</plugin>
                </plugins>
            </configuration>
        </component>
    </components>
</plexus>