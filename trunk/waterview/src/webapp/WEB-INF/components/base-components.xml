<?xml version="1.0" encoding="UTF-8"?>
<component-set>
    <components>
        <component>
            <role>org.codehaus.plexus.logging.LoggerManager</role>
            <implementation>com.cyclopsgroup.cyclib.log4j.Log4jLoggerManager</implementation>
            <lifecycle-handler>avalon</lifecycle-handler>
            <configuration>
                <properties>${basedir}/WEB-INF/log4j.properties</properties>
            </configuration>
        </component>
        <component>
            <role>com.cyclopsgroup.cyclib.velocity.VelocityComponent</role>
            <implementation>com.cyclopsgroup.cyclib.velocity.DefaultVelocityComponent</implementation>
            <lifecycle-handler>avalon</lifecycle-handler>
            <configuration>
                <properties>${basedir}/WEB-INF/velocity.properties</properties>
                <logtag>com.cyclopsgroup.waterview</logtag>
            </configuration>
        </component>
    </components>
    <load-on-start>
        <component>
        	<role>org.codehaus.plexus.logging.LoggerManager</role>
        </component>
        <component>
            <role>com.cyclopsgroup.cyclib.velocity.VelocityComponent</role>
        </component>
    </load-on-start>
</component-set>