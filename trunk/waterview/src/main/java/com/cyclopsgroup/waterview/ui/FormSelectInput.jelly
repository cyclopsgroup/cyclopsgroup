<?xml version="1.0" encoding="UTF-8"?>
<span xmlns:j="jelly:core">
    <select name="${field.name}" class="waterviewFormSelect">
        <j:forEach var="option" items="${selectTag.options}">
            <j:choose>
                <j:when test="${field.value eq option.value}">
                    <option value="${option}" selected="selected">${option.text}</option>
                </j:when>
                <j:otherwise>
                    <option value="${option}">${option.text}</option>
                </j:otherwise>
            </j:choose>
        </j:forEach>
    </select>
</span>