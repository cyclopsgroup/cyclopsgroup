<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	<bean
		id="com.cyclopsgroup.waterview.velocity.VelocityTemplateEngine"
		class="com.cyclopsgroup.waterview.velocity.VelocityTemplateEngine"
		init-method="init">
		<constructor-arg index="0"
			ref="com.cyclopsgroup.waterview.spi.ResourceRegistry" />
		<constructor-arg index="1">
			<props>
				<prop key="resource.loader">file</prop>
				<prop key="file.resource.loader.class">
					org.apache.velocity.runtime.resource.loader.FileResourceLoader
				</prop>
				<prop key="file.resource.loader.path">${basedir}</prop>
				<prop key="file.resource.loader.cache">false</prop>
			</props>
		</constructor-arg>
	</bean>
</beans>