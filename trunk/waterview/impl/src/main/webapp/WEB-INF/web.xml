<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>Waterview</display-name>
	<description>Waterview Web Application Framework</description>
	<context-param>
		<param-name>spring.config</param-name>
		<param-value>WEB-INF/spring-beans.xml</param-value>
	</context-param>
	<servlet>
		<servlet-name>waterview-page</servlet-name>
		<servlet-class>
			com.cyclopsgroup.waterview.impl.servlet.SharedSpringWaterviewServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>waterview-action</servlet-name>
		<servlet-class>
			com.cyclopsgroup.waterview.impl.servlet.SharedSpringWaterviewServlet
		</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>waterview-resource</servlet-name>
		<servlet-class>
			com.cyclopsgroup.waterview.impl.servlet.SharedSpringWaterviewServlet
		</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>waterview-page</servlet-name>
		<url-pattern>/portal/page/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>waterview-action</servlet-name>
		<url-pattern>/portal/action/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>waterview-action</servlet-name>
		<url-pattern>/portal/resource/*</url-pattern>
	</servlet-mapping>
</web-app>