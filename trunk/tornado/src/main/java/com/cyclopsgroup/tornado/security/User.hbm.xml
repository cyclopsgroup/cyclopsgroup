<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.cyclopsgroup.tornado.security">
    <class name="User" table="c_t_user">
        <meta attribute="generated-class">com.cyclopsgroup.tornado.security.UserBase</meta>
        <id name="id" type="string" length="128" column="user_id">
            <generator class="uuid.hex" />
        </id>
        <property name="name" type="string" column="user_name" not-null="true">
            <meta attribute="field-description">User name of this user</meta>
        </property>
        <property name="password" type="string" column="password" />
        <property name="firstName" type="string" column="first_name" />
        <property name="middleName" type="string" column="middle_name" />
        <property name="lastName" type="string" column="last_name" />
        <property name="gender" type="string">
            <column name="gender" length="1" />
        </property>
        <property name="email" type="string" not-null="true" />
        <property name="isDisabled" column="is_disabled" type="boolean">
            <meta attribute="property-type">boolean</meta>
        </property>
        <property name="isSystem" column="is_system" type="boolean">
            <meta attribute="property-type">boolean</meta>
        </property>
    </class>
</hibernate-mapping>