<h2>User Profile</h2>
<table width="100%">
	<tr>
		<td colspan="2" class="title">Input Account Name</td>
	</tr>
	<form method="get" action="$link.setPage("system,administration,user,UserProfile.vm")">
	<tr>
		<td>Account Name:</td>
		<td><input type="text" name="user_name" value="$!userName"/></td>
	</tr>
	<tr>
		<td colspan="2" class="bottom">
			<input type="submit" value="Display"/>
		</td>
	</tr>
	</form>
	#if($user)
		<tr>
			<td colspan="2" class="title">User Profile for $user.userName</td>
		</tr>
		<form method="post" action="$link.setAction("system.administration.UserAction").setPage("system,administration,user,UserProfile.vm")">
		<input type="hidden" name="user_name" value="$user.userName"/>
		<input type="hidden" name="user_id" value="$user.userId"/>
    	<tr>
    		<td>Name: </td>
    		<td>
    			<input type="text" name="first_name" value="$user.firstName" size="15"/>
    			<input type="text" name="middle_name" value="$!user.middleName" size="5"/>
    			<input type="text" name="last_name" value="$user.lastName" size="15"/>
    		</td>
    	</tr>
    	<tr>
    		<td>EMail:</td>
    		<td><input type="text" name="email" value="$user.email" size="30"/></td>
    	</tr>
    	<tr>
    		<td>Description:</td>
    		<td rowspan="2"><textarea name="description" cols="40" rows="4">$!user.description</textarea></td>
    	</tr>
    	<tr>
    		<td>&#32;</td>
    	</tr>
    	<tr>
    		<td colspan="2" class="bottom">
    			<input type="submit" value="Save Change" name="eventsubmit_doSaveprof"/>
    		</td>
    	</tr>
    	</form>
    #end
</table>