<?xml version="1.0" encoding="UTF-8"?>
<Tornado xmlns="http://tornado.cyclopsgroup.com/definition">
    <Navigator>
        <Root id="tornado.root">
            <Folder name="home" page="Index.jelly">
                <NodeProvider name="my" class="com.cyclopsgroup.tornado.richweb.MyPortalNavigator"/>
                <Folder name="user" page="system/user/Index.jelly">
                    <Node name="profile" page="system/user/Profile.jelly"/>
                    <Node name="password" page="system/user/ChangePassword.jelly"/>
                    <Node name="myportal" page="system/user/ManagePortal.jelly"/>
                </Folder>
                <Node name="about" page="system/About.jelly"/>
            </Folder>
            <Folder name="admin" page="system/admin/Index.jelly">
                <Folder name="advanced" page="system/admin/advanced/Index.jelly">
                    <NodeProvider name="components" class="com.cyclopsgroup.tornado.richweb.ComponentAdminNavigator"/>
                </Folder>
                <Folder name="security" page="system/admin/security/Index.jelly">
                    <Node name="adduser" page="system/admin/security/AddUser.jelly"/>
                    <Node name="searchuser" page="system/admin/security/SearchUser.jelly"/>
                    <Node name="addgroup" page="system/admin/security/AddGroup.jelly"/>
                    <Node name="searchgroup" page="system/admin/security/SearchGroup.jelly"/>
                </Folder>
                <Folder name="lookandfeel" page="system/admin/lookandfeel/Index.jelly">
                    <Node name="theme" page="system/admin/lookandfeel/SelectTheme.jelly"/>
                    <Node name="layout" page="system/admin/lookandfeel/SelectLayout.jelly"/>
                    <Node name="style" page="system/admin/lookandfeel/SelectStyle.jelly"/>
                    <Node name="navigator" page="system/admin/lookandfeel/ManageNavigator.jelly"/>
                </Folder>
            </Folder>
        </Root>
    </Navigator>
</Tornado>
