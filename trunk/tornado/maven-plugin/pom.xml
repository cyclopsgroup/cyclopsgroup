<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.cyclopsgroup.tornado</groupId>
        <artifactId>tornado-project-base</artifactId>
        <version>3.1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>tornado-maven-plugin</artifactId>
    <packaging>maven-plugin</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>Tornado maven2 plugin</name>
    <description>
        Maven plugin that does tornado related stuff
    </description>
    <dependencies>
        <dependency>
            <groupId>com.cyclopsgroup.tornado</groupId>
            <artifactId>tornado-api</artifactId>
            <version>3.1-SNAPSHOT</version>
        </dependency>
	<!--
	<dependency>
            <groupId>com.cyclopsgroup.tornado</groupId>
            <artifactId>tornado-sql-impl</artifactId>
            <version>3.1-SNAPSHOT</version>
	</dependency>
	-->
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-plugin-tools-api</artifactId>
            <version>2.0.1</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-plugin-plugin</artifactId>
                <configuration>
                    <goalPrefix>tornado</goalPrefix>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
