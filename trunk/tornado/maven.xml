<?xml version="1.0" encoding="UTF-8"?>
<project>
    <!-- Generate cyclopsgroup style website instead of ugly maven default one -->
    <preGoal name="xdoc:transform">
        <attainGoal name="cyclops:pre-xdoc" />
    </preGoal>

    <goal name="resetdb" prereqs="war:webapp">
        <java classname="com.cyclopsgroup.waterview.jelly.JellyRunner" fork="true" dir="${maven.war.webapp.dir}">
            <classpath>
                <path refid="maven.dependency.classpath" />
                <pathelement path="${maven.build.dest}" />
            </classpath>
            <arg value="META-INF/cyclopsgroup/DropAndCreateTables.jelly" />
        </java>
    </goal>
</project>
