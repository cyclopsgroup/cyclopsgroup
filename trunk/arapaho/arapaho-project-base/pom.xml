            <distribution>cyclopsgroup.central</distribution>
        </license>
    </licenses>
    <scm>
        <connection>
            scm:cvs:pserver:anonymous:@cvs.sourceforge.net:/cvsroot/cyclops-group:arapaho/arapaho-project-base
        </connection>
        <developerConnection>
            scm:cvs:ext:username@cvs.sourceforge.net:/cvsroot/cyclopsgroup:arapaho/arapaho-project-base
        </developerConnection>
        <url>http://cvs.cyclopsgroup.com/viewrep/cyclops-group/arapaho/arapaho-project-base</url>
    </scm>
    <organization>
        <name>CyclopsGroup.com</name>
        <url>http://www.cyclopsgroup.com/</url>
    </organization>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>2.0-SNAPSHOT</version>
                <configuration>
                    <outputEncoding>UTF-8</outputEncoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webXml>${basedir}/src/main/webapp/WEB-INF/web.xml</webXml>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.cyclopsgroup.arapaho</groupId>
                <artifactId>arapaho-maven-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <configuration>
                    <goalPrefix>arapaho</goalPrefix>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <pluginRepositories>
        <pluginRepository>
            <id>cyclopsgroup.central</id>
            <name>CyclopsGroup.com Central M2 repository</name>
            <url>http://cyclops-group.sourceforge.net/m2</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>
    <repositories>
        <repository>
            <releases>
                <enabled>true</enabled>
            </releases>
            <id>codehaus.snapshots</id>
            <name>Maven central development repository</name>
            <url>http://snapshots.maven.codehaus.org/maven2</url>
        </repository>
        <repository>
            <releases>
                <enabled>true</enabled>
            </releases>
            <id>apache.snapshots</id>
            <name>Apache development repository</name>
            <url>http://cvs.apache.org/maven-snapshot-repository</url>
        </repository>
        <repository>
            <releases>
                <enabled>true</enabled>
            </releases>
            <id>apache.snapshots</id>
            <name>Apache development repository</name>
            <url>http://cvs.apache.org/maven-snapshot-repository</url>
        </repository>
        <repository>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <id>cyclopsgroup.central</id>
            <name>CyclopsGroup.com Central M2 Repository</name>
            <url>http://cyclops-group.sourceforge.net/m2</url>
        </repository>
    </repositories>
    <reporting>
        <plugins>
            <plugin>
                <artifactId>maven-checkstyle-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>changelog-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>taglist-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </reporting>
    <distributionManagement>
        <repository>
            <id>cyclopsgroup.server.sourceforge</id>
            <name>CyclopsGroup.com central m2 repository</name>
            <url>scp://shell.sourceforge.net/home/groups/c/cy/cyclops-group/m2</url>
        </repository>
        <snapshotRepository>
            <id>cyclopsgroup.server.sourceforge</id>
            <name>CyclopsGroup.com central m2 snapshot repository</name>
            <url>scp://shell.sourceforge.net/home/groups/c/cy/cyclops-group/m2</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>
</project>
