    <groupId>com.cyclopsgroup.arapaho</groupId>
    <artifactId>arapaho-project-base</artifactId>
    <packaging>pom</packaging>
    <name>CyclopsGroup.com Project Base</name>
    <version>1.0-SNAPSHOT</version>
