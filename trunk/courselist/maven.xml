<?xml version="1.0" encoding="UTF-8"?>
<project>
    <!-- Generate cyclopsgroup style website instead of ugly maven default one -->
    <preGoal name="xdoc:transform">
        <attainGoal name="cyclops:pre-xdoc" />
    </preGoal>

    <postGoal name="xdoc:transform">
        <attainGoal name="cyclops:post-xdoc" />
    </postGoal>

    <goal name="resetdb" prereqs="war:webapp">
        <java classname="com.cyclopsgroup.waterview.jelly.JellyScriptsRunner" fork="true"
            dir="${maven.war.webapp.dir}">
            <classpath>
                <path refid="maven.dependency.classpath" />
                <pathelement path="${maven.build.dest}" />
            </classpath>
            <arg value="WEB-INF/resetdb.properties" />
        </java>
    </goal>
</project>
