<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:a="http://www.springframework.org/schema/aop"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">
    <bean id="com.cyclopsgroup.laputa.VelocityEngine"
        class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
        <property name="overrideLogging" value="true" />
        <property name="preferFileSystemAccess" value="true" />
        <property name="resourceLoaderPath" value="." />
        <property name="velocityProperties">
            <props>
                <prop key="tools.view.servlet.layout.directory">
                    WEB-INF/velocity/layout/
                </prop>
                <prop key="tools.view.servlet.layout.default.template">
                    master_content_layout.vm
                </prop>
            </props>
        </property>
    </bean>

    <bean name="/index" class="com.cyclopsgroup.laputa.portal.ui.Index">
        <constructor-arg value="helloboy" />
    </bean>

    <bean name="/my/mypages"
        class="com.cyclopsgroup.laputa.portal.ui.my.MyPages">
        <constructor-arg ref="com.cyclopsgroup.laputa.space.SpaceService" />
    </bean>
</beans>