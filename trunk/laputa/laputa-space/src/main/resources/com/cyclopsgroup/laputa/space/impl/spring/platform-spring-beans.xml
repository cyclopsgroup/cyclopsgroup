<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
    <!-- 
        Following beans are required
        com.cyclopsgroup.laputa.SessionFactory
    -->
    <bean id="com.cyclopsgroup.laputa.HibernateSessionInterceptor"
        class="com.cyclopsgroup.arapaho.spring.LocalHibernateSessionInterceptor">
        <constructor-arg ref="com.cyclopsgroup.laputa.SessionFactory" />
        <property name="allowCreateSession" value="false" />
    </bean>
</beans>