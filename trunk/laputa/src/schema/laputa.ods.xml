<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE database SYSTEM "http://jakarta.apache.org/turbine/dtd/database_3_1.dtd">
<database name="laputa" defaultIdMethod="none">
   <table name="cg_lpt_board" description="Discussion board">
      <column name="board_id" type="CHAR" size="60" primaryKey="true" required="true" description="Primary key"/>
      <column name="board_name" type="VARCHAR" size="60" required="true"/>
      <column name="owner_id" type="CHAR" size="60" required="true"/>
      <column name="package_id" type="CHAR" size="60" required="true"/>
      <column name="package_path" type="VARCHAR" size="255" required="true"/>
      <column name="description" type="VARCHAR" size="255"/>
      <column name="disabled" type="BIT" required="true" default="0"/>
      <foreign-key name="board_fk_package" foreignTable="cg_lpt_package">
         <reference local="package_id" foreign="package_id"/>
      </foreign-key>
   </table>
   <table name="cg_lpt_package" description="Package of discussion board">
      <column name="package_id" type="CHAR" size="60" primaryKey="true" required="true"/>
      <column name="package_name" type="VARCHAR" size="60" required="true"/>
      <column name="package_path" type="VARCHAR" size="255" required="true"/>
      <column name="parent_id" type="CHAR" size="60" required="true"/>
      <column name="description" type="VARCHAR" size="255"/>
      <column name="disabled" type="BIT" required="true" default="0"/>
   </table>
</database>