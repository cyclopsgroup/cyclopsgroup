<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>Waterview</display-name>
    <description>Waterview Web Application Framework</description>
    <servlet>
        <servlet-name>waterview</servlet-name>
        <servlet-class>
            com.cyclopsgroup.waterview.impl.servlet.DedicatedSpringWaterviewServlet
        </servlet-class>
        <init-param>
            <param-name>spring.config</param-name>
            <param-value>WEB-INF/spring-beans.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>waterview</servlet-name>
        <url-pattern>/portal/*</url-pattern>
    </servlet-mapping>
</web-app>