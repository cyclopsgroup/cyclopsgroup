<?xml version="1.0" encoding="UTF-8"?>
<project>
  <extend>${maven.repo.local}/cyclib/poms/cyclopsgroup.pom</extend>
  <pomVersion>3</pomVersion>
  <artifactId>levistone</artifactId>
  <name>Levistone</name>
  <groupId>levistone</groupId>
  <currentVersion>SNAPSHOT</currentVersion>
  <organization>
    <name>Cyclops Group</name>
    <url>http://cyclops-group.sourceforge.net</url>
    <logo>/images/cyclopsgroup_logo.gif</logo>
  </organization>
  <inceptionYear>2004</inceptionYear>
  <shortDescription>Waterview is a highly componentized web application framework with plugable page rendering tools</shortDescription>
  <developers>
    <developer>
      <name>Jiaqi Guo</name>
      <id>jiaqi</id>
      <email>jiaqi.guo@gmail.com</email>
      <organization>Evavi</organization>
      <timezone>-6</timezone>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
      <version>3.0</version>
      <type>jar</type>
      <url>http://jakarta.apache.org/commons/collections</url>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.0</version>
      <type>jar</type>
      <url>http://jakarta.apache.org/commons/lang</url>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
      <jar>commons-logging-1.0.4.jar</jar>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>hibernate</groupId>
      <artifactId>hibernate</artifactId>
      <version>2.1.6</version>
      <jar>hibernate-2.1.6.jar</jar>
      <type>jar</type>
    </dependency>
  </dependencies>
  <build>
    <nagEmailAddress>cyclops-group-develop@lists.sourceforge.net</nagEmailAddress>
    <sourceDirectory>src/java/main</sourceDirectory>
    <unitTestSourceDirectory>src/java/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>
    <resources>
      <resource>
        <directory>${pom.build.sourceDirectory}</directory>
        <includes>
          <include>**/*.*</include>
        </includes>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
        <filtering>false</filtering>
      </resource>
      <resource>
        <directory>src/resources</directory>
        <includes>
          <include>**/*.*</include>
        </includes>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
</project>

