<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://maven.apache.org/xsd/maven-project-3.0.0.xsd">
    <extend>../subproject-base.xml</extend>
    <pomVersion>3</pomVersion>
    <id>maven-jbuilderx-plugin</id>
    <name>Maven JBuilderX Plug-in</name>
    <currentVersion>1.0-b1</currentVersion>
    <organization>
        <name>Cyclops Group</name>
        <url>http://www.cyclopsgroup.com</url>
        <logo>/images/cyclopsgroup_logo.png</logo>
    </organization>
    <inceptionYear>2002</inceptionYear>
    <shortDescription>JBuilder Plugin for Maven</shortDescription>
    <developers>
        <developer>
            <name>Guo, Jiaqi</name>
            <id>jiaqi</id>
            <email>jiaqi.guo@gmail.com</email>
            <roles>
                <role>Developer</role>
            </roles>
            <timezone>-6</timezone>
        </developer>
    </developers>
    <dependencies>
        <dependency>
            <id>commons-lang</id>
            <version>1.0-b1.1</version>
            <url>http://jakarta.apache.org/commons/lang</url>
        </dependency>
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-velocity</artifactId>
            <version>SNAPSHOT</version>
            <url>http://jakarta.apache.org/commons/jelly/libs/velocity</url>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java/main</sourceDirectory>
        <unitTestSourceDirectory>src/java/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
        </unitTest>
        <resources>
            <resource>
                <directory>src/plugin-resources</directory>
                <targetPath>plugin-resources</targetPath>
            </resource>
            <resource>
                <directory>.</directory>
                <includes>
                    <include>*.xml</include>
                    <include>*.properties</include>
                    <include>*.jelly</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>
