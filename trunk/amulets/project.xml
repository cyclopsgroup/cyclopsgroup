<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
    <pomVersion>3</pomVersion>
    <id>amulets</id>
    <name>Cyclops Amulets</name>
    <currentVersion>1.0-b1-dev</currentVersion>
    <organization>
        <name>Cyclops Group Alliance</name>
        <url>http://cyclops-group.sourceforge.net/</url>
        <logo>/images/cyclops_logo.gif</logo>
    </organization>
    <inceptionYear>2003</inceptionYear>
    <package>com.cyclops.amulets</package>
    <logo>/images/amulets_logo.gif</logo>
    <!-- Gump integration -->
    <description>A set of maven plugins</description>
    <shortDescription>Java Project Management Tools</shortDescription>
    <url>http://cyclops-group.sourceforge.net/projects/amulets/</url>
    <siteAddress>shell.sourceforge.net</siteAddress>
    <siteDirectory>/home/groups/c/cy/cyclops-group/htdocs/projects/amulets/</siteDirectory>
    <repository>
        <connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/cyclops-group:amulets</connection>
        <developerConnection>scm:cvs:ext:${maven.username}@cvs.sourceforge.net:/cvsroot/cyclops-group:amulets</developerConnection>
        <url>http://cvs.sourceforge.net/viewcvs.cgi/cyclops-group/amulets/</url>
    </repository>
    <developers>
        <developer>
            <name>Jiaqi Guo</name>
            <id>jiaqi</id>
            <email>g-cyclops@users.sourceforge.net</email>
            <organization/>
            <roles>
                <role>Java Developer</role>
            </roles>
        </developer>
    </developers>
    <dependencies>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
        </unitTest>
        <resources>
            <resource>
                <directory>src/plugin-resources</directory>
                <targetPath>plugin-resources</targetPath>
            </resource>
            <resource>
                <directory>.</directory>
                <includes>
                    <include>plugin.jelly</include>
                    <include>plugin.properties</include>
                    <include>project.properties</include>
                    <include>project.xml</include>
                </includes>
            </resource>
        </resources>
    </build>
    <reports>
        <!--
     |
     | These should all be completely self contained. You should be able
     | to generate each of them individually without needing the final
     | xdoc transformation.
     |
     | Each report plugin with it's POM and plugin.jelly logic should
     | contain everything needed to produced the report.
     |
    -->
        <report>maven-jdepend-plugin</report>
        <report>maven-checkstyle-plugin</report>
        <report>maven-changes-plugin</report>
        <report>maven-changelog-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-tasklist-plugin</report>
        <report>maven-jellydoc-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-simian-plugin</report>
    </reports>
</project>
