<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://maven.apache.org/xsd/maven-project-3.0.0.xsd">
    <extend>cyclopsgroup-1.0.pom</extend>
    <pomVersion>3</pomVersion>
    <id>maven-cyclops-plugin</id>
    <name>Maven Cyclops Plugin</name>
    <currentVersion>1.0-b3</currentVersion>
    <organization>
        <name>Cyclops Group</name>
        <url>http://www.cyclopsgroup.com</url>
        <logo>/images/cyclopsgroup_logo.png</logo>
    </organization>
    <inceptionYear>2002</inceptionYear>
    <shortDescription>
        Maven plugin for cyclopsgroup specific operations like cyclopsgroup project website generation.
    </shortDescription>
    <siteDirectory>${maven.cyclopsgroup.site.directory}/projects/amulets/${pom.artifactId}</siteDirectory>
    <repository>
        <connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/cyclops-group:amulets/cyclops</connection>
        <developerConnection>
            scm:cvs:ext:your-name@cvs.sourceforge.net:/cvsroot/cyclops-group:amulets/cyclops
        </developerConnection>
        <url>http://fisheye.cenqua.com/viewrep/cyclops-group/amulets/cyclops</url>
    </repository>
    <versions>
        <version>
            <id>1.0-b3</id>
            <name>1.0-b3</name>
            <tag>AMULETS_CYCLOPS_1_0_B3</tag>
        </version>
    </versions>
    <developers>
        <developer>
            <name>Guo, Jiaqi</name>
            <id>jiaqi</id>
            <email>jiaqi.guo@gmail.com</email>
            <roles>
                <role>Developer</role>
            </roles>
            <timezone>-6</timezone>
        </developer>
    </developers>
    <dependencies>
        <dependency>
            <id>commons-io</id>
            <version>1.0</version>
        </dependency>
        <dependency>
            <id>commons-lang</id>
            <version>2.0</version>
        </dependency>
        <dependency>
            <id>junit</id>
            <version>3.8.1</version>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java/main</sourceDirectory>
        <unitTestSourceDirectory>src/java/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
        </unitTest>
        <resources>
            <resource>
                <directory>src/plugin-resources</directory>
                <targetPath>plugin-resources</targetPath>
            </resource>
            <resource>
                <directory>.</directory>
                <includes>
                    <include>*.xml</include>
                    <include>*.properties</include>
                    <include>*.jelly</include>
                    <include>*.pom</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>
