<?xml version="1.0" encoding="UTF-8"?>
<project>
	<!-- Generate cyclopsgroup style website instead of ugly maven default one -->
	<preGoal name="xdoc:transform">
		<attainGoal name="cyclops:pre-xdoc" />
	</preGoal>
	<postGoal name="xdoc:transform">
		<attainGoal name="cyclops:post-xdoc" />
	</postGoal>
	<goal name="deploy-pom" description="Copy cyclopsgroup.pom into local repository">
		<mkdir dir="${maven.repo.local}/com.cyclopsgroup/poms" />
		<copy file="${basedir}/cyclopsgroup-1.0.pom" todir="${maven.repo.local}/com.cyclopsgroup/poms/" />
	</goal>
</project>
