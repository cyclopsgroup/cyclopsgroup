<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://maven.apache.org/xsd/maven-project-3.0.0.xsd">
    <extend>../base-sub-project.xml</extend>
    <pomVersion>3</pomVersion>
    <id>clib-lang</id>
    <name>clib-lang</name>
    <groupId>clib</groupId>
    <currentVersion>SNAPSHOT</currentVersion>
    <organization>
        <name>Cyclops Group</name>
        <url>http://www.cyclopsgroup.com</url>
        <logo>/images/cyclopsgroup_logo.gif</logo>
    </organization>
    <inceptionYear>2005</inceptionYear>
    <shortDescription>Enter short description for ${pom.artifactId}</shortDescription>
    <developers>
        <developer>
            <name>Jiaqi Guo</name>
            <id>jiaqi</id>
            <email>jiaqi.guo@gmail.com</email>
            <organization>Cyclops Group</organization>
            <url>http://www.cyclopsgroup.com</url>
            <timezone>-6</timezone>
        </developer>
    </developers>
    <dependencies>
        <dependency>
            <id>commons-collections</id>
            <version>3.1</version>
            <url>http://jakarta.apache.org/commons/collections</url>
        </dependency>
        <dependency>
            <id>commons-beanutils</id>
            <version>1.7.0</version>
            <url>http://jakarta.apache.org/commons/beanutils</url>
        </dependency>
        <dependency>
            <id>commons-jelly</id>
            <version>1.0-RC1</version>
            <url>http://jakarta.apache.org/commons/jelly</url>
        </dependency>
        <dependency>
            <id>commons-lang</id>
            <version>2.1</version>
            <url>http://jakarta.apache.org/commons/lang</url>
        </dependency>
    </dependencies>
    <build>
        <nagEmailAddress>cyclops-group-develop@lists.sourceforge.net</nagEmailAddress>
        <sourceDirectory>src/java/main</sourceDirectory>
        <unitTestSourceDirectory>src/java/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>${pom.build.unitTestSourceDirectory}</directory>
                    <excludes>
                        <exclude>**/*.java</exclude>
                    </excludes>
                    <filtering>false</filtering>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>${pom.build.sourceDirectory}</directory>
                <includes>
                    <include>**/*.*</include>
                </includes>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
                <filtering>false</filtering>
            </resource>
            <resource>
                <directory>src/resources</directory>
                <includes>
                    <include>**/*.*</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
</project>
