<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://cxf.apache.org/jaxrs
        http://cxf.apache.org/schemas/jaxrs.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml" />
    <import resource="classpath:META-INF/cxf/cxf-extension-jaxrs-binding.xml" />
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

    <jaxrs:server id="restService" address="/">
        <jaxrs:serviceBeans>
            <ref bean="gameService" />
        </jaxrs:serviceBeans>
    </jaxrs:server>

    <bean id="gameService" class="org.cyclopsgroup.fiar.service.DefaultGameService">
        <constructor-arg>
            <bean
                class="org.cyclopsgroup.fiar.service.mem.HashMapGameStorageService" />
        </constructor-arg>
        <constructor-arg>
            <bean
                class="org.cyclopsgroup.fiar.service.mem.ConstantUserSessionService" />
        </constructor-arg>
    </bean>
</beans>