<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.cyclopsgroup</groupId>
    <artifactId>awss3-wagon-provider</artifactId>
    <packaging>jar</packaging>
    <name>S3 Maven Extension</name>
    <description>Maven2 Wagon to support S3 repository</description>
    <url>http://wiki.cyclopsgroup.org/cym2:awss3</url>
    <version>0.1</version>
    <inceptionYear>2011</inceptionYear>
    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <scm>
        <connection>
            scm:git:http://github.com/jiaqi/cyclopsgroup/cym2/trunk/cym2/awss3
        </connection>
        <developerConnection>
            scm:git:https://github.com/jiaqi/cyclopsgroup/cym2/trunk/cym2/awss3
        </developerConnection>
        <url>
            https://github.com/jiaqi/cyclopsgroup/cym2/trunk/cym2/awss3
        </url>
    </scm>
    <ciManagement>
        <system>continuum</system>
        <url>http://code.cyclopsgroup.org/continuum/</url>
    </ciManagement>
    <distributionManagement>
        <repository>
            <id>cyclopsgroup.server.sourceforge</id>
            <url>s3://www.cyclopsgroup.org/m2-private</url>
        </repository>
    </distributionManagement>
    <developers>
        <developer>
            <id>jiaqi</id>
            <email>jiaqi@cyclopsgroup.org</email>
            <name>Jiaqi Guo</name>
            <timezone>-6</timezone>
            <url>http://www.cyclopsgroup.org/members/jiaqi</url>
        </developer>
    </developers>
    <dependencies>
        <dependency>
            <groupId>javax.activation</groupId>
            <artifactId>activation</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-java-sdk</artifactId>
            <version>1.2.0</version>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.3</version>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>1.2</version>
        </dependency>
        <dependency>
            <groupId>org.apache.maven.wagon</groupId>
            <artifactId>wagon-provider-api</artifactId>
            <version>1.0-beta-7</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.7</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.maven.wagon</groupId>
            <artifactId>wagon-provider-test</artifactId>
            <version>1.0-beta-7</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
        <extensions>
            <extension>
                <groupId>org.cyclopsgroup</groupId>
                <artifactId>awss3-wagon-provider</artifactId>
                <version>${project.version}</version>
            </extension>
        </extensions>
    </build>
    <profiles>
        <profile>
            <id>release.public</id>
            <distributionManagement>
                <repository>
                    <id>cyclopsgroup.server.sourceforge</id>
                    <url>
                        s3://www.cyclopsgroup.org/m2-export
                    </url>
                </repository>
            </distributionManagement>
        </profile>
    </profiles>
</project>