<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    <!--
        Following HSQLDB implementation is defined for testing purpose
        only
    -->
    <bean id="org.cyclopsgroup.doorman.TransactionManager"
        class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory"
            ref="org.cyclopsgroup.doorman.HSQLSessionFactory" />
    </bean>
    <bean id="org.cyclopsgroup.doorman.HSQLSessionFactory"
        class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="packagesToScan"
            value="org.cyclopsgroup.doorman.service.storage" />
        <property name="dataSource"
            ref="org.cyclopsgroup.doorman.HSQLDataSource" />
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.HSQLDialect</prop>
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.hbm2ddl.auto">create-drop</prop>
            </props>
        </property>
    </bean>
    <bean id="org.cyclopsgroup.doorman.HSQLDataSource" class="org.hsqldb.jdbc.JDBCDataSource">
        <property name="database" value="jdbc:hsqldb:mem:doorman" />
        <property name="user" value="sa" />
        <property name="password" value="sa" />
    </bean>
</beans>