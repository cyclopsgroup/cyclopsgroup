<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="org.cyclopsgroup.doorman.SessionFactory"
        class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="dataSource" ref="org.cyclopsgroup.doorman.DataSource" />
        <property name="annotatedPackages">
            <list>
                <value>org.cyclospgroup.doorman.service.storage</value>
            </list>
        </property>
    </bean>

    <import
        resource="classpath:org/cyclopsgroup/doorman/hibernate-core-service.xml" />
</beans>