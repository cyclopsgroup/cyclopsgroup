<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    <bean name="waterview.ModuleResolver"
        class="org.cyclopsgroup.waterview.impl.module.SpringPackageModuleResolver">
        <constructor-arg>
            <list>
                <value>org.cyclopsgroup.waterview.impl
                </value>
            </list>
        </constructor-arg>
    </bean>
    <bean name="waterview.VelocityRenderer"
        class="org.cyclopsgroup.waterview.impl.servlet.ServletVelocityRendererFactory">
        <property name="classPathPrefix" value="waterview/template/" />
    </bean>
    <bean name="waterview.Renderer"
        class="org.cyclopsgroup.waterview.impl.render.ExtensionBasedRenderer">
        <constructor-arg>
            <map>
                <entry key="vm" value-ref="waterview.VelocityRenderer" />
            </map>
        </constructor-arg>
    </bean>
    <bean name="waterview.ParseRequestValve"
        class="org.cyclopsgroup.waterview.impl.valve.ParseRequestPathValve">
        <constructor-arg value="/index.vm" />
    </bean>
    <bean name="waterview.RenderPageValve"
        class="org.cyclopsgroup.waterview.impl.valve.RenderPageValve">
        <constructor-arg ref="waterview.ModuleResolver" />
        <constructor-arg ref="waterview.Renderer" />
        <constructor-arg value="_layout_/default_layout.vm" />
    </bean>

    <bean name="waterview.SimpleContextProcessor"
        class="org.cyclopsgroup.waterview.impl.pipeline.Pipeline">
        <constructor-arg>
            <list>
                <ref bean="waterview.ParseRequestValve" />
                <ref bean="waterview.RenderPageValve" />
            </list>
        </constructor-arg>
    </bean>
</beans>