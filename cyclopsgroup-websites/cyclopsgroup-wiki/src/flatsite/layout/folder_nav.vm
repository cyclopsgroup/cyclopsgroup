<div>
    <p>
        &nbsp;
    </p>
    #set($folderRootPath=$templatePath.replaceAll("\/[a-z]+\.vm$",""))
    #set($pathRoot=$folderRootPath.replaceAll("^content/",""))
    #set($folderDoc=$xml.loadLocalDocument("$folderRootPath/folder.xml"))
    #set($pages=$folderDoc.rootElement.element("pages").elements("page"))
    <ul class="list-group">
        #foreach($p in $pages)
        #set($pagePath=$p.attributeValue("path"))
        #if($pagePath=="index")
        <a class="list-group-item list-group-item-success" href='$link.absolute($pathRoot)'>
            <span class="glyphicon glyphicon-chevron-up"></span>
            $p.attributeValue("title")
        </a>
        #elseif("content$requestedPath"=="$folderRootPath/$pagePath")
        <a class="list-group-item active">
            $p.attributeValue("title")
        </a>
        #else
        <a class="list-group-item" href='$link.absolute("$pathRoot/$pagePath")'
            title="$p.text.trim()">
            $p.attributeValue("title")
        </a>
        #end
        #end
    </ul>
</div>